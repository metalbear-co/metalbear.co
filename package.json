{
  "name": "metalbear",
  "description": "MetalBear website",
  "version": "1.0.0",
  "browserslist": [
    "defaults"
  ],
  "repository": "https://github.com/metalbear-co/metalbear.co",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "npm run build:subsite && exec-bin node_modules/.bin/hugo/hugo server",
    "build": "npm run build:subsite && exec-bin node_modules/.bin/hugo/hugo --gc --minify --cleanDestinationDir && npm run pagefind:mirrord",
    "build:cf-preview": "HUGO_BASEURL=$CF_PAGES_URL/mirrord npm run build:subsite && HUGO_BASEURL=$CF_PAGES_URL exec-bin node_modules/.bin/hugo/hugo --gc --minify --cleanDestinationDir && npm run pagefind:mirrord",
    "build:subsite": "cd mirrord.dev && exec-bin ../node_modules/.bin/hugo/hugo --destination ../static/mirrord",
    "pagefind:mirrord": "npx pagefind --site public/mirrord/docs --output-path public/mirrord/pagefind",
    "clean": "shx rm -rf public resources static/mirrord mirrord.dev/public mirrord.dev/resources",
    "clean:install": "shx rm -rf package-lock.json node_modules",
    "start": "exec-bin node_modules/.bin/hugo/hugo server --bind=0.0.0.0 --disableFastRender",
    "server": "exec-bin node_modules/.bin/hugo/hugo server",
    "check": "exec-bin node_modules/.bin/hugo/hugo version",
    "postinstall": "hugo-installer --version otherDependencies.hugo --extended --destination node_modules/.bin/hugo && cd mirrord.dev && npm install",
    "init": "shx rm -rf .git && git init -b main",
    "create": "exec-bin node_modules/.bin/hugo/hugo new",
    "prestart": "npm run clean",
    "prebuild": "npm run clean",
    "build:preview": "npm run build -D -F",
    "lint": "npm run -s lint:scripts && npm run -s lint:styles && npm run -s lint:markdown",
    "lint:scripts": "eslint assets/js config functions",
    "lint:styles": "stylelint \"assets/scss/**/*.{css,sass,scss,sss,less}\"",
    "lint:markdown": "markdownlint-cli2 \"*.md\" \"content/**/*.md\"",
    "lint:markdown-fix": "markdownlint-cli2-fix \"*.md\" \"content/**/*.md\"",
    "test": "npm run -s lint",
    "env": "env",
    "precheck": "npm version",
    "copy:katex-fonts": "shx cp ./node_modules/katex/dist/fonts/* ./static/fonts/",
    "version": "auto-changelog -p && git add CHANGELOG.md"
  },
  "devDependencies": {
    "@babel/cli": "^7.17",
    "@babel/core": "^7.17",
    "@babel/preset-env": "^7.16",
    "@fullhuman/postcss-purgecss": "^4.1",
    "auto-changelog": "^2.4",
    "autoprefixer": "^10.4",
    "bootstrap": "^5.1",
    "clipboard": "^2.0",
    "eslint": "^8.12",
    "exec-bin": "^1.0.0",
    "flexsearch": "^0.7.21",
    "highlight.js": "^11.5",
    "hugo-installer": "^4.0.1",
    "instant.page": "^5.1",
    "katex": "^0.15",
    "lazysizes": "^5.3",
    "markdownlint-cli2": "^0.4.0",
    "node-fetch": "^3.2",
    "pagefind": "^1.3.0",
    "postcss": "^8.4",
    "postcss-cli": "^9.1",
    "purgecss-whitelister": "^2.4",
    "shx": "^0.3.4",
    "stylelint": "^14.6",
    "stylelint-config-standard-scss": "^3.0"
  },
  "otherDependencies": {
    "hugo": "0.141.0"
  },
  "dependencies": {
    "@splidejs/splide": "^4.1.4",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/cli": "^4.1.4",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.1.4"
  }
}
